{% extends 'base.html.twig' %}

{% block title %}Installation index{% endblock %}

{% block body %}
    <h1>Installation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for installation in installations %}
            <tr>
                <td>{{ installation.id }}</td>
                <td>{{ installation.montant }}</td>
                <td>
                    <a href="{{ path('installation_show', {'id': installation.id}) }}">show</a>
                    <a href="{{ path('installation_edit', {'id': installation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('installation_new') }}">Create new</a>
{% endblock %}
